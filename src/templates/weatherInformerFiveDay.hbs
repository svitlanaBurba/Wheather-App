<section class='days-of-week'>
  <div class='container'>
    <h2 class='location1'>{{city.name}}, {{city.country}}</h2>
    <div class='temperature-wrapper'>
      <h2 class='location'>{{city.name}}, {{city.country}}</h2>
      {{#each this}}
        <ul class='daily-temperature'>
          <li class='daily-temperature__day'>
            <p class='daily-temperature__week-day'>{{date.dayName}}</p>
            <p class='daily-temperature__date'>{{date.day}} {{date.month}}</p>
            <svg class='daily-temperature__img'>
              <use href='{{weather.icon}}' width='35' height='35'></use>
            </svg>
            <ul class='daily-temperature__range'>
              <li class='daily-temperature__range-item'>
                <p class='daily-temperature__range'>min</p>
                <p class='daily-temperature__range-value'>{{temperature.min}}</p>
              </li>
              <li class='daily-temperature__range-item'>
                <p class='daily-temperature__range'>max</p>
                <p class='daily-temperature__range-value'>{{temperature.max}}</p>
              </li>
              <li></li>
            </ul>
          </li>
        </ul>
        <button type='button' class='daily-temperature__additional-info'>more info</button>
      {{/each}}
      <button type='button' class='day prev'>></button>
      <button type='button' class='day next'>></button>
    </div>
  </div>
</section>